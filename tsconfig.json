{
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "types": [
      "jest"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx"]
}
